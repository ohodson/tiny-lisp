{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "tiny_lisp REPL (dbg)",
            "preLaunchTask": "Bazel build tiny_lisp (dbg)",
            "request": "launch",
            "type": "cppdbg",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bazel-bin/tiny_lisp",
            "linux": {
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "gdb",
                "miDebuggerArgs": "-d ${workspaceFolder}",
            },
            "osx": {
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "lldb",
                "sourceFileMap": {
                    "src": "${workspaceFolder}/src",
                    "bazel-bin": "${workspaceFolder}/bazel-bin",
                    "bazel-out": "${workspaceFolder}/bazel-out",
                    "external": "${workspaceFolder}/external"
                },
            },
            "windows": {
                "type": "cppvsdbg",
                "request": "launch",
            },
            "stopAtEntry": false,
            "externalConsole": false,
        },
        {
            "name": "tiny_lisp example (dbg)",
            "preLaunchTask": "Bazel build tiny_lisp (dbg)",
            "request": "launch",
            "type": "cppdbg",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bazel-bin/tiny_lisp",
            "linux": {
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "gdb",
                "miDebuggerArgs": "-d ${workspaceFolder}",
            },
            "osx": {
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "lldb",
                "sourceFileMap": {
                    "src": "${workspaceFolder}/src",
                    "bazel-bin": "${workspaceFolder}/bazel-bin",
                    "bazel-out": "${workspaceFolder}/bazel-out",
                    "external": "${workspaceFolder}/external"
                },
            },
            "args": ["examples/${input:exampleToDebug}.lisp"],
            "windows": {
                "type": "cppvsdbg",
                "request": "launch",
            },
            "stopAtEntry": false,
            "externalConsole": false,
        },
        {
            "name": "tiny_lisp test (dbg)",
            "preLaunchTask": "Bazel build all (dbg)",
            "request": "launch",
            "type": "cppdbg",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/bazel-bin/tests/${input:testToDebug}",
            "linux": {
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "gdb",
                "miDebuggerArgs": "-d ${workspaceFolder}",
            },
            "osx": {
                "type": "cppdbg",
                "request": "launch",
                "MIMode": "lldb",
                "sourceFileMap": {
                    "src": "${workspaceFolder}/src",
                    "bazel-bin": "${workspaceFolder}/bazel-bin",
                    "bazel-out": "${workspaceFolder}/bazel-out",
                    "external": "${workspaceFolder}/external"
                },
            },
            "args": [],
            "windows": {
                "type": "cppvsdbg",
                "request": "launch",
            },
            "stopAtEntry": false,
            "externalConsole": false,
        },
    ],
    "inputs": [
        {
            "id" : "exampleToDebug",
            "description": "Select the example to debug",
            "type": "pickString",
            "options": [
                "bubble_sort",
                "factorial",
                "fibonacci",
                "io_demo",
                "list_reversal",
                "nest_lambda_bug",
                "simple_lambda"
            ]
        },
        {
            "id": "testToDebug",
            "description": "Select the test to debug",
            "type": "pickString",
            "options": [
                "evaluator_test",
                "parser_test",
                "repl_test",
                "tokenizer_test",
                "value_test"
            ]
        }
    ]
}
